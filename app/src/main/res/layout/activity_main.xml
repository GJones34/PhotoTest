<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivGallery" android:layout_width="wrap_content"  android:layout_height="324dp"
        android:layout_alignParentEnd="true" android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:adjustViewBounds="true"
        android:maxHeight="42dp" android:maxWidth="42dp" android:scaleType="fitXY" />

    <Button
        android:id="@+id/btnSnap" android:onClick="takePicture" android:text="snap"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/captionPrompt"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/captionEntry"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="6dp"
        android:text="Photo Caption:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/captionEntry"
        android:layout_width="301dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="146dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="(dad jokes welcome)"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/captionSubmit"
        android:onClick="addCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="85dp"
        android:text="submit" />

</RelativeLayout>