<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/captionEntry"
            android:layout_width="301dp"
            android:layout_height="202dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="84dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="(dad jokes welcome)"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/captionSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="34dp"
            android:onClick="Caption"
            android:text="submit" />

        <TextView
            android:id="@+id/captionPrompt"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/captionEntry"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="12dp"
            android:text="Photo Caption:"
            android:textSize="24sp" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>